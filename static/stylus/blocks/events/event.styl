.event
  padding 32pt 25pt
  border-radius 5pt
  width 100%
  margin 0 0 30pt

  &__title
    text-align center
    font-size 24px
    font-weight 600
    margin-bottom 34pt

  &__top
    size 100% 302pt

  &__gallery
    float left
    size 449pt 100%
    position relative
    background #f2f2f2
    border-radius 5pt

    &-wrapper,
    &-loading
      size 100%
      overflow hidden
      position relative

    &-loading
      background url("../img/ajax-loader.gif") no-repeat center

    &-holder
      absolute left top
      size 100%

    &-image
      absolute left top
      size 449pt 302pt
      opacity 0
      transition opacity 300ms ease-out 0s

      &_active
        opacity 1

      & img
        size 449pt 302pt
        border-radius 5pt

    &-switcher
      absolute left 2pt bottom -36pt

      &__btn
        size 24pt
        display inline-block
        font-size 0
        float left

        &-prev
          background url('../img/gallery/switchers-left.png') no-repeat left top / 24pt auto

        &-next
          background url('../img/gallery/switchers-right.png') no-repeat left top / 24pt auto

        &:hover
          background-position left bottom

      &__cnt
        float left
        font-size 12pt
        font-weight 600
        line-height 23pt
        margin 0 10pt

  &__info
    float right
    size 158pt 100%
    background #fafafa
    box-shadow 0 0 2px rgba(0, 0, 0, 0.2)
    text-align center
    padding 11pt 10pt
    margin-right 0

    &-image
      size 69pt
      border-radius 27pt

    &-place
      margin-top 6pt
      font-size 10pt
      text-transform uppercase
      line-height 1.2em

    &-address
      font-size 10pt
      font-weight 600
      margin 6pt 0 27pt

    &-summary
      margin-top 10pt
      font-size 10pt

      &_value
        font-size 12pt
        margin-top 3pt
        font-weight 600

        & .ruble
          text-decoration line-through

  &__description
    margin-top 62pt
    text-align left

    & p
      padding 0 47pt
      font-size 14pt
      line-height 1.2em

    &-image
      margin 28pt 0 28pt
      size 100% 427pt
      border-radius 10pt

  &__places
    margin-top 36pt

    &-holder
      overflow hidden
      margin-bottom 15pt
      padding 1pt 1pt 2pt

    &-place
      size 148pt
      float left
      margin-right 10pt
      background #fafafa
      box-shadow 0 0 2px rgba(0, 0, 0, 0.2)
      border-radius 5pt

      &:hover .description_holder
        opacity 1

      &:last-child
        margin 0

      &__image
        position relative
        size 100% 108pt
        overflow hidden

        & img
          border-radius 5pt 5pt 0 0
          width 148pt

      &__desc
        padding-top 9pt
        font-weight 600
        text-align center

        & a
          color $textColor
          font-size 12pt

        &-time
          color $legendColor
          font-size 9pt
          margin-top 2pt

      &:hover a
        color $linkHover

      &:hover &__desc-time
        color $linkHover